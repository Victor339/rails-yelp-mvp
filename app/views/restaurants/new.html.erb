

<div class="container">
  <h1>New Restaurant</h1>
  <div class="row">
    <div class="col">
      <h1>Create a restaurant</h1>


      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category, collection: Restaurant::CATEGORY %>

        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <%= link_to 'Back', restaurants_path %>
</div>


